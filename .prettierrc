{
    "jsxBracketSameLine": false,
    "useTabs": false,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "quoteProps": "as-needed",
    "proseWrap": "always",
    "overrides": [
        {
            "files": "*.mdx",
            "options": {
                "parser": "mdx"
            }
        }
    ]
}
